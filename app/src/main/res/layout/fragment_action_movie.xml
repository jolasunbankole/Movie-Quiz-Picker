<?xml version="1.0" encoding="utf-8"?>

<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FA2F2F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActionMovieFragment">

    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hello"
        android:text="@string/action_movies"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:translationY="20dp"/>

    <TextView
        android:id="@+id/title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hello"
        android:text="@string/choose_a_year"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:translationY="200dp"/>



    <Button
        android:id="@+id/Year1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Category"
        android:textColor="@color/black"
        android:text="@string/_1990"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:translationY="250dp"/>

    <Button
        android:id="@+id/Year2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Category"
        android:text="@string/_2001"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:translationY="350dp"/>

    <Button
        android:id="@+id/Year3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Category"
        android:text="@string/_2010"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:translationY="450dp"/>



</LinearLayout>
</layout>